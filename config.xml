<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dotter.essentra" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://cordova.apache.org/ns/1.0">
    <name>ESSENTRA</name>
    <description></description>
     <author  href="http://www.dotter.com.br" email="eduardo@dotter.com.br">
      Dotter do Brasil Ltda
    </author>
	
	<preference name="fullscreen"       value="false" />
	<preference name="phonegap-version" value="cli-6.3.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="webviewbounce"    value="false" />
	<preference name="permissions" 		value="none"/>
    <preference name="DisallowOverscroll" value="true" /> 
	
	<icon src="logo.png" />
    <gap:splash src="logo.png" />
	
    <plugin name="cordova-plugin-device" />
	<plugin spec="https://github.com/phonegap/phonegap-plugin-barcodescanner.git"/>
	
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
	<access origin="http://chat.v-id.net/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
